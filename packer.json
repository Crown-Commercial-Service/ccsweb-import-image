{
  "variables": {
    "aws_region": "",
    "aws_subnet": "",
    "aws_security_group": "",
    "aws_keypair_name": "",
    "aws_keypair_private_file": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "region": "{{user `aws_region`}}",
    "source_ami_filter": {
      "filters": {
        "virtualization-type": "hvm",
        "name": "amzn2-ami-hvm-*-x86_64-*",
        "root-device-type": "ebs"
      },
      "owners": ["137112412989"],
      "most_recent": true
    },
    "instance_type": "t3.small",
    "ssh_username": "ec2-user",
    "ami_name": "ccsweb-import-{{isotime \"20060102_150405\"}}",
    "subnet_id": "{{user `aws_subnet`}}",
    "security_group_id": "{{user `aws_security_group`}}",
    "ssh_keypair_name": "{{user `aws_keypair_name`}}",
    "ssh_private_key_file": "{{user `aws_keypair_private_file`}}",
    "associate_public_ip_address": true
  }],
  "provisioners": [
    {
      "type": "file",
      "source": "./files/awscli.conf",
      "destination": "~/awscli.conf",
      "direction": "upload"
    },
    {
      "type": "file",
      "source": "./files/awslogs.conf",
      "destination": "~/awslogs.conf",
      "direction": "upload"
    },
    {
      "type": "file",
      "source": "./files/applogs",
      "destination": "~/applogs",
      "direction": "upload"
    },
    {
      "type": "file",
      "source": "./files/wp_import",
      "destination": "~/wp_import",
      "direction": "upload"
    },
    {
      "type": "file",
      "source": "./files/wp_import.sh",
      "destination": "~/wp_import.sh",
      "direction": "upload"
    },
    {
      "type": "shell",
      "script": "build.sh"
    }
  ]
}